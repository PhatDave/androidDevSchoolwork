<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <Button
            android:text="Batn Nazad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity2ReturnButton"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp" />

    <Button
            android:text="Opet Batn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity2FragmentButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            android:textSize="34sp" />

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="hr.suka.lv2.ItemFragment"
            android:id="@+id/fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity2ReturnButton"
            app:layout_constraintBottom_toTopOf="@+id/activity2FragmentButton"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>